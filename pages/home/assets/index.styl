// reset
* {
  box-sizing border-box
}

html, body, div, img, input, h3, p {
  margin 0
  padding 0
}

// content
html, body, #app, .container {
  width 100%
  height 100%
}

// file
.file-content {
  position absolute
  width 200px
  height 50px
  top 50%
  left 50%
  margin-top -25px
  margin-left -100px
  border-radius 4px
  box-shadow 1px 1px 6px 0 rgba(0, 0, 0, .2)
  transition boxShadow .6s
  &:hover {
    box-shadow 1px 1px 6px 0 rgba(0, 0, 0, .6)
    & p {
      color #4A90E2
    }
  }
  & input {
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    opacity 0
    outline 0
    cursor pointer
  }
  & p {
    color #333
    font-size 14px
    text-align center
    line-height 50px
    transition color .6s
  }
}

// photoWall
.photowall-content {
  height 100%
  background-color gainsboro
  display flex
  overflow hidden
  & .image-list {
    width 200px
    height 100%
    margin-right 15px
    border-right 1px solid #ccc
    padding 30px
    overflow scroll
    background-color #fff
    & .image-item {
      width 100%
      margin-bottom 40px
      & .image-title {
        width 100%
        color #666
        font-size 14px
        text-align center
        padding-top 6px
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
      }
      & .image {
        width 100%
        border-radius 5px
      }
      &.active {
        & .image {
          box-shadow 0 0 10px 5px rgba(0, 0, 0, .5)
        }
        & .image-title {
          color #4A90E2
        }
      }
    }
  }
  & .image-info {
    position relative
    flex 1
    height 100%
    background-color #ffffff
    & .back {
      position absolute
      padding 5px 20px
      top 5px
      right 5px
      border 1px solid #999
      background-color #fff
      color #333
      outline none
      cursor pointer
      &:hover {
        border-color #4A90E2
        color #4A90E2
      }
    }
    & .image-item {
      width 100%
      height 100%
      text-align center
      & .image {
        height 100%
      }
    }
  }
}

// common
.hide {
  display none
}

